{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "ts",
        "outDir": "js",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5", // Note that ideally we should support es6, but this doesn't currently work with browserify. Revisit later.'
        "noImplicitAny": false,
        "jsx": "react",
        "sourceMap": true,
        "experimentalDecorators": true
         //"forceConsistentCasingInFileNames": true //TODO: check if we need this
    },
    "exclude": [
        "ts/test"
    ]
}