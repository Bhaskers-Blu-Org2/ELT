{
    "compileOnSave": true,
    "compilerOptions": {
        "jsx": "react",
        "rootDir": "",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5", // Note that ideally we should support es6, but typescript does not yet support it: https://typescript.codeplex.com/wikipage?title=ECMAScript%206%20Status&referringTitle=Roadmap. Revisit later.'
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "typings/main.d.ts",
        "typings/main",
        "node_modules",
        "app",
        "test"
    ]
}